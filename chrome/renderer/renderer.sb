(version 1)
(deny default)

; Allow following symlinks
(allow file-read-metadata)
; Allow reading files out of /System/Library
(allow file-read-data (regex #"^/System/Library"))

; Needed for Fonts
(allow mach-lookup (global-name "com.apple.FontObjectsServer"))
