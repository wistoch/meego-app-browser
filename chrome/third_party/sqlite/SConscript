    'date.c',
    'delete.c',
    'expr.c',
    'fts2.c',
    'fts2_hash.c',
    'fts2_icu.c',
    'fts2_porter.c',
    'fts2_tokenizer.c',
    'fts2_tokenizer1.c',
    'func.c',
    'hash.c',
    'icu.c',
    'insert.c',
    'legacy.c',
    'loadext.c',
    'main.c',
    'malloc.c',
    'opcodes.c',
    'os.c',
    'os_win.c',
    'pager.c',
    'parse.c',
    'pragma.c',
    'prepare.c',
    'printf.c',
    'random.c',
    'select.c',
    'shell.c',
    'shell_icu.c',
