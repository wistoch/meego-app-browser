Import('env')

env = env.Clone(
)

env.Prepend(
    CPPPATH = [
        '$ICU38_DIR/public/common',
        '$ICU38_DIR/public/i18n',
        '..',
    ],
)

env.Append(
    CPPDEFINES = [
        'U_STATIC_IMPLEMENTATION',

        'SQLITE_ENABLE_FTS2',
        'SQLITE_ENABLE_BROKEN_FTS2',
        'SQLITE_ENABLE_ICU',
        'SQLITE_SECURE_DELETE',
        'THREADSAFE',
        ['_HAS_EXCEPTIONS', '0'],
    ],

    CCFLAGS = [
        '/TC',

        '/wd4800',
        '/wd4244',
    ],
)

input_files = [
    'alter.c',
    'analyze.c',
    'attach.c',
    'auth.c',
