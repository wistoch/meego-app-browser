Import('env')

env = env.Clone()

if env.Bit('windows'):
  env.Prepend(
      CPPPATH = [
          '$CHROME_DIR/tools/build/win',
          '$CHROME_SRC_DIR',
      ],
      CCFLAGS = [
          '/TP',
          #'/Wp64',
      ],
  )

env.Append(
