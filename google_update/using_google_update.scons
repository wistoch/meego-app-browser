__doc__ = """
Settings for other components using Google Update.
"""

Import("env")

# Google Update only works on Windows.
if env.Bit('windows'):
  env.Append(
      CPPPATH = [
          '$GOOGLE_UPDATE_DIR',
      ],
      LIBS = [
          'google_update',
      ],
  )
