      'base/ssl_config_service.cc',
      'http/http_transaction_winhttp.cc',
      'http/winhttp_request_throttle.cc',
      'url_request/url_request_ftp_job.cc',
  ]
  for remove in to_be_ported_files:
      input_files.remove(remove)

