# This SConscript is currently only suitable for Linux.

Import('env')

env = env.Clone(
)

env.Append(
    CPPDEFINES = [
        'HAVE_CONFIG_H',
    ],
)

env.Prepend(
    CPPPATH = [
        '$LIBEVENT_DIR',
        '$LIBEVENT_DIR/compat/',
        '$LIBEVENT_DIR/linux/',
    ],
)


input_files = [
    'buffer.c',
    #'devpoll.c',
    'epoll.c',
    'epoll_sub.c',
    'evbuffer.c',
    'evdns.c',
    'event.c',
    'event_tagging.c',
    #'evport.c',
    'evrpc.c',
    'evutil.c',
    'http.c',
    #'kqueue.c',
    'log.c',
    'poll.c',
    'select.c',
    'signal.c',
    'strlcpy.c',
]


env.ChromeStaticLibrary('libevent', input_files)
