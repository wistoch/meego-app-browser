# TODO(keunwoo): Use better cross-platform abstraction; see chrome/SConstruct
Import('env')

env = env.Clone()

env.Prepend(
    CPPPATH = [
        '#../third_party/zlib',
        '#../',
    ],
)

if env['PLATFORM'] == 'win32':
  env.Append(
      CCFLAGS = [
          '/TP',
          '/wd4800',
      ],
  )

env.Append(
    CPPDEFINES = [
        'PNG_USER_CONFIG',
        'CHROME_PNG_WRITE_SUPPORT',
    ],
)

input_files = [
    'png.c',
    'pngwutil.c',
    'pngwtran.c',
    'pngwrite.c',
    'pngwio.c',
    'pngvcrd.c',
    'pngtrans.c',
    'pngset.c',
    'pngrutil.c',
    'pngrtran.c',
    'pngrio.c',
    'pngread.c',
    'pngpread.c',
    'pngmem.c',
    'pngget.c',
    'pnggccrd.c',
    'pngerror.c',
]

env.ChromeStaticLibrary('libpng', input_files)
