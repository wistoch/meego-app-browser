Import('env')

env = env.Clone()

env.Prepend(
    CPPPATH = [
        '$NPAPI_DIR',
        '$CHROME_SRC_DIR',
    ],
    LIBS = [
        'activex_shim',
        'googleurl',
        env['ICU_LIBS'],  # TODO(sgk):  '$ICU_LIBS' when scons is fixed
        'base',
        'dmg_fp',
    ],
)

env.Append(
    LINKFLAGS = [
        '/INCREMENTAL',

        '/MANIFEST',
        '/DELAYLOAD:"dwmapi.dll"',
        '/DELAYLOAD:"uxtheme.dll"',
        '/MACHINE:X86',
        '/FIXED:No',

        '/safeseh',
        '/dynamicbase',
        '/ignore:4199',
        '/nxcompat',

        '/DEBUG',
    ],
)

input_files = [
    'activex_shim_dll.cc',
    'activex_shim_dll.def',
]

dll = env.ChromeSharedLibrary('npaxshim', input_files)
i = env.Install('$TARGET_ROOT', dll)
env.Alias('webkit', i)

